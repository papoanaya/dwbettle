<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical" android:layout_width="240px"
			  android:layout_height="fill_parent" android:background="#FFFFFFFF">
	<LinearLayout android:layout_width="wrap_content"
				  android:layout_height="wrap_content" android:orientation="horizontal"
				  android:layout_margin="10dip">
		<ImageView android:scaleType="center" android:layout_height="wrap_content"
				   android:layout_width="wrap_content" android:src="@drawable/icon"></ImageView>
		<TextView android:text="@string/application_name"
				  android:textSize="24sp" android:layout_width="wrap_content"
				  android:textColor="#FF5555FF" android:textStyle="bold"
				  android:layout_height="fill_parent" android:gravity="center_vertical"
				  android:layout_marginLeft="30dip"></TextView>
	</LinearLayout>
	<TextView android:layout_height="wrap_content" android:text="@string/about_text"
			  android:layout_marginBottom="10dip" android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip" android:autoLink="web|email"
			  android:gravity="center_horizontal" android:textColor="#FF333333"
			  android:textSize="18sp" android:layout_width="fill_parent"></TextView>
	<Button android:layout_height="wrap_content" android:id="@+id/buttonOk"
			android:text="Ok" android:layout_width="fill_parent"
			android:layout_marginTop="10dip"></Button>
</LinearLayout>
