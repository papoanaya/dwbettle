<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical" android:layout_width="240px"
			  android:paddingLeft="5dip" android:paddingRight="5dip"
			  android:layout_height="wrap_content">
	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginBottom="2dip" android:id="@+id/dialog_label_1" android:layout_marginRight="2dip"/>
	<EditText android:layout_height="wrap_content"
			  android:layout_marginBottom="2dip" android:layout_marginTop="2dip"
			  android:layout_width="fill_parent" android:id="@+id/edit_text1_ex"/>
	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginBottom="2dip" android:id="@+id/dialog_label_2" android:layout_marginRight="2dip"/>
	<EditText android:layout_height="wrap_content"
			  android:layout_marginBottom="2dip" android:layout_marginTop="2dip"
			  android:layout_width="fill_parent" android:id="@+id/edit_text2_ex"/>
	<LinearLayout android:layout_width="fill_parent"
				  android:layout_height="wrap_content" android:orientation="horizontal">
		<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_weight="1.0"
				android:id="@+id/okButton_ex" android:text="@string/ok"></Button>
		<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_weight="1.0"
				android:text="@string/cancel" android:id="@+id/cancelButton"></Button>
	</LinearLayout>
</LinearLayout>
